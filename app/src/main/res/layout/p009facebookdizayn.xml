<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightBlue"
    android:padding="15dp"
    >

    <TextView
        style="@style/style_facebook"
        android:text="facebook"
        android:padding="20dp"

        android:textStyle="bold"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:id="@+id/textViewFacebookP009"
        />

    <TextView
        style="@style/style_facebook"
        android:text="Email"
        android:layout_below="@+id/textViewFacebookP009"
        android:layout_alignParentLeft="true"
        android:id="@+id/textViewEmailP009"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewEmailP009"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="#FFF"
        android:padding="8dp"
        android:id="@+id/editTextEmailP009"/>
    <TextView
        style="@style/style_facebook"
        android:text="Password"
        android:textColor="#FFF"
        android:layout_below="@+id/editTextEmailP009"
        android:layout_alignParentLeft="true"
        android:id="@+id/textViewPasswordP009"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewPasswordP009"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="#FFF"
        android:padding="8dp"
        android:id="@+id/editTextPassword"
        />
    <CheckBox
        style="@style/style_facebook"
        android:layout_alignParentLeft="true"
        android:text="Save Login"
        android:layout_below="@+id/editTextPassword"
        />
    <TextView
        style="@style/style_facebook"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="Need an account?\nSign up using your phone"
        android:padding="30dp"/>









</RelativeLayout>